public class Circle implements calc{
    float r;
    public Circle(float r)
    {
        this.r=r;
    }
    public void area()
    {
        double area=3.14*r*r;
        System.out.println(area);
    }
    public void perimeter()
    {
        double peri=2*3.14*r;
        System.out.println(peri);
    }
}
public class Rect implements calc{
    float l,b;
    public Rect(float l,float b)
    {
        this.l=l;
        this.b=b;

    }
    public void area()
    {
        float area=l*b;
        System.out.println(area);

    }
    public void perimeter()
    {
        float peri=2*(l+b);
        System.out.println(peri);
    }

}
import java.util.Scanner;

public class Main {
    public static void main(String [] args)
    {
        System.out.println("enter choice\n1.area of circle]\n2..perim of cirlce\n3.area of square \n4.perim of rec");
        Scanner sc=new Scanner((System.in));
        int ch=sc.nextInt();
        switch(ch)
        {
            case 1:int r=sc.nextInt();
                Circle c=new Circle(r);;
                c.area();
                break;
            case 2:int r1=sc.nextInt();
                Circle c1=new Circle(r1);;
                c1.perimeter();
                break;



        }
    }
}
public interface calc {
    public void perimeter();

    public void area();
}
